{
  "compilerOptions": {
    "target": "ESNext", 
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "types": ["vite/client", "node", "react", "react-dom", "vituum", "vitest", "vitest/globals", "vike-react"
],

    "strict": true,
    "noEmit": true,
    "verbatimModuleSyntax": true,
    "jsxImportSource": "react"

  },

  "include": [
    "src",
    "lib",
    "plugins",
    "middlewares",
    "adapters",
    "vite.config.ts",
    "tsconfig.app.json",
    "tsconfig.node.json"
  ],
  "exclude": ["node_modules", "dist"]
}
