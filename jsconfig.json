{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* Svelte recommended */
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    /* For using JS & Svelte files */
    "checkJs": true,

    /* TypeScript will understand Vite & Svelte env types */
    "types": ["vite/client"]
  },

  /* Do NOT include node_modules â€” avoid slow builds */
  "include": [
    "src/**/*.d.ts",
    "src/**/*.js",
    "src/**/*.svelte"
  ]
}
